# =============================================================================
# Luna Server - Development Dockerfile
# 
# Optimized for development with hot reloading and debugging
# =============================================================================

FROM node:18-alpine AS development

# Install development dependencies
RUN apk add --no-cache \
    python3 \
    make \
    g++ \
    libc6-compat \
    vips-dev \
    git \
    curl

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./
COPY tsconfig.json ./

# Install all dependencies (including dev dependencies)
RUN npm ci && npm cache clean --force

# Copy source code and configuration
COPY src/ ./src/
COPY lib/ ./lib/
COPY .env.example .env.example

# Create required directories
RUN mkdir -p temp/uploads temp/aspose temp/downloads logs && \
    chmod 755 temp logs

# Expose ports
EXPOSE 3000 9229

# Development health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
  CMD curl -f http://localhost:3000/api/v1/health || exit 1

# Start development server with debugging
CMD ["npm", "run", "dev"]

# =============================================================================
# Metadata
# =============================================================================
LABEL maintainer="Luna Team <team@lunaserver.com>"
LABEL version="1.0.0-dev"
LABEL description="Luna Server - Development Environment"
LABEL environment="development" 